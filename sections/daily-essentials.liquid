{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .daily-essentials-wrapper {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  @media screen and (min-width: 990px) {
    .daily-essentials-wrapper {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    
    .daily-essentials-text {
      width: 45%;
      max-width: 500px;
    }

    .daily-essentials-media {
      width: 50%;
    }
  }


  .daily-essentials-badge {
    display: inline-block;
    background-color: #D3FA99; /* Light lime green from image */
    color: #1C3A13;
    padding: 0.5rem 1.2rem;
    border-radius: 50px;
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: -5rem;
    letter-spacing: 0.05em;
  }

  .daily-essentials-heading {
    font-size: 3.2rem;
    line-height: 1.2;
    color: #1A301D; /* Dark green text */
    margin-bottom: 0rem;
    margin-top: 1rem;
    font-family: var(--font-heading-family);
  }
  
  @media screen and (min-width: 750px) {
    .daily-essentials-heading {
      font-size: 4.8rem;
    }
  }

  .daily-essentials-subtext {
    font-size: 1.6rem;
    line-height: 1.6;
    color: #1C3A13;
    margin-bottom: 2rem;
  }

  .daily-essentials-button {
    background-color: #344C3D;
    color: #ffffff;
    border: none;
    padding: 1.5rem 3rem;
    border-radius: 50px;
    font-size: 1.6rem;
    font-weight: 500;
    text-decoration: none;
    display: inline-block;
    transition: transform 0.2s ease, opacity 0.2s ease;
  }

  .daily-essentials-button:hover {
     transform: scale(1.02);
     opacity: 0.9;
     color: #fff;
  }

  /* Right Side Grid */
  .daily-essentials-media-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto auto;
    gap: 1.5rem;
  }

  .daily-essentials-main-image {
    grid-column: 1 / -1; /* Span full width */
    grid-row: 1;
    background-color: #EEF2E8; /* Light background for the main image container */
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    aspect-ratio: 16/9; /* Or adjust based on image */
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .daily-essentials-main-image img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* Or cover depending on the look */
  }

  .daily-essentials-small-image {
    border-radius: 12px;
    overflow: hidden;
    aspect-ratio: 1;
  }
  
  .daily-essentials-small-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="daily-essentials-wrapper">
      
      {%- comment -%} Left Column: Text Content {%- endcomment -%}
      <div class="daily-essentials-text">
        {%- if section.settings.badge_text != blank -%}
          <span class="daily-essentials-badge">{{ section.settings.badge_text }}</span>
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <h2 class="daily-essentials-heading">{{ section.settings.heading }}</h2>
        {%- endif -%}

        {%- if section.settings.text != blank -%}
          <div class="daily-essentials-subtext rte">
            {{ section.settings.text }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <a href="{{ section.settings.button_link }}" class="daily-essentials-button">
            {{ section.settings.button_label }}
          </a>
        {%- endif -%}
      </div>

      {%- comment -%} Right Column: Media Grid {%- endcomment -%}
      <div class="daily-essentials-media">
        <div class="daily-essentials-media-grid">
          
          <div class="daily-essentials-main-image">
            {%- if section.settings.image_main != blank -%}
              {{ section.settings.image_main | image_url: width: 1000 | image_tag: loading: 'lazy', alt: section.settings.image_main.alt }}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>

          <div class="daily-essentials-small-image">
             {%- if section.settings.image_small_1 != blank -%}
              {{ section.settings.image_small_1 | image_url: width: 400 | image_tag: loading: 'lazy', alt: section.settings.image_small_1.alt }}
            {%- else -%}
              {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          
          <div class="daily-essentials-small-image">
             {%- if section.settings.image_small_2 != blank -%}
              {{ section.settings.image_small_2 | image_url: width: 400 | image_tag: loading: 'lazy', alt: section.settings.image_small_2.alt }}
            {%- else -%}
              {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>

          <div class="daily-essentials-small-image">
             {%- if section.settings.image_small_3 != blank -%}
              {{ section.settings.image_small_3 | image_url: width: 400 | image_tag: loading: 'lazy', alt: section.settings.image_small_3.alt }}
            {%- else -%}
              {{ 'collection-3' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>

        </div>
      </div>

    </div>
  </div>
</div>


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.background_color }};
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .whole-body-health {
    color: {{ section.settings.text_color }};
  }

  .wbh-header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4rem;
    gap: 2rem;
  }

  @media screen and (min-width: 750px) {
    .wbh-header {
      flex-direction: row;
      align-items: flex-end;
    }
  }

  .wbh-text-content {
    max-width: 600px;
  }

  .wbh-heading {
    font-size: 3.2rem;
    margin: 0 0 1.5rem;
    line-height: 1.2;
    color: inherit;
    font-family: var(--font-heading-family);
  }

  .wbh-subtext {
    font-size: 1.6rem;
    line-height: 1.5;
    opacity: 0.9;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .wbh-heading {
      font-size: 4rem;
    }
  }

  .wbh-link {
    color: inherit;
    text-decoration: none;
    font-size: 1.4rem;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    border-bottom: 1px solid transparent;
    padding-bottom: 2px;
    transition: all 0.2s;
  }

  .wbh-link:hover {
    border-bottom-color: currentColor;
  }

  .wbh-link svg {
    width: 1.2rem;
    height: 1.2rem;
    margin-left: 0.5rem;
  }

  .wbh-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .wbh-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 990px) {
    .wbh-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .wbh-card {
    background-color: {{ section.settings.card_background }};
    border-radius: 16px;
    padding: 2rem 2rem 3rem; /* Adjusted padding bottom */
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    color: #ffffff;
    height: 100%;
  }

  @media screen and (min-width: 990px) {
    .wbh-card {
      width: 348px;
      height: 503px;
    }
  }

  .wbh-badge {
    position: absolute;
    top: 1.5rem;
    left: 1.5rem;
    background-color: #D3FA99; /* Lime green */
    color: #1C3A13;
    font-size: 1rem;
    font-weight: 600;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    z-index: 1;
  }

  .wbh-card-title {
    font-size: 2.8rem;
    margin-top: 5rem;
    margin-bottom: 0rem;
    font-family: var(--font-heading-family);
    min-height: 1.2em;
    color: #ffffff;
    line-height: 1.2;
  }

  .wbh-card-image-wrapper {
    width: 100%;
    margin-bottom: -1rem;
    position: relative;
    aspect-ratio: 1; /* Square for product image */
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1; /* Allow image area to take up available space */
  }

  .wbh-card-main-image {
    position: relative;
    z-index: 2;
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .wbh-card-bg-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    height: 90%;
    object-fit: contain;
    z-index: 1;
    opacity: 0.8;
  }

  .wbh-card-btn {
    background-color: #344C3D;
    color: #ffffff;
    text-decoration: none;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    font-size: 1.6rem;
    font-weight: 500;
    margin-bottom: 1rem;
    transition: opacity 0.2s;
    width: auto;
    min-width: 160px; /* Ensure wide button */
    display: inline-block;
  }

  .wbh-card-btn:hover {
    opacity: 0.9;
    color: #fff;
  }

  .wbh-price {
    font-size: 1.4rem;
    opacity: 0.7;
    margin-bottom: 0.5rem;
    color: #ffffff;
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }};">
  <div class="page-width whole-body-health">
    <div class="wbh-header">
      <div class="wbh-text-content">
        {%- if section.settings.heading != blank -%}
          <h2 class="wbh-heading">{{ section.settings.heading }}</h2>
        {%- endif -%}
        {%- if section.settings.subtext != blank -%}
          <p class="wbh-subtext">{{ section.settings.subtext }}</p>
        {%- endif -%}
      </div>
      {%- if section.settings.link_text != blank -%}
        <a href="{{ section.settings.link_url }}" class="wbh-link">
          {{ section.settings.link_text }}
          <svg
            viewBox="0 0 14 10"
            fill="none"
            aria-hidden="true"
            focusable="false"
            class="icon icon-arrow"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor"></path>
          </svg>
        </a>
      {%- endif -%}
    </div>

    <div class="wbh-grid">
      {%- for block in section.blocks -%}
        <div class="wbh-card" {{ block.shopify_attributes }}>
          {%- if block.settings.badge_text != blank -%}
            <span class="wbh-badge">{{ block.settings.badge_text }}</span>
          {%- endif -%}

          <h3 class="wbh-card-title">
            {%- if block.settings.title_override != blank -%}
              {{ block.settings.title_override }}
            {%- elsif block.settings.product != blank -%}
              {{ block.settings.product.title }}
            {%- else -%}
              Product Title
            {%- endif -%}
          </h3>

          <div class="wbh-card-image-wrapper">
            {%- if block.settings.background_image != blank -%}
              {{
                block.settings.background_image
                | image_url: width: 600
                | image_tag: class: 'wbh-card-bg-image', loading: 'lazy', aria_hidden: true
              }}
            {%- endif -%}

            {%- if block.settings.custom_image != blank -%}
              {{
                block.settings.custom_image
                | image_url: width: 600
                | image_tag: class: 'wbh-card-main-image', loading: 'lazy'
              }}
            {%- elsif block.settings.product.featured_image != blank -%}
              {{
                block.settings.product.featured_image
                | image_url: width: 600
                | image_tag: class: 'wbh-card-main-image', loading: 'lazy'
              }}
            {%- else -%}
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg wbh-card-main-image' }}
            {%- endif -%}
          </div>

          <a href="{{ block.settings.product.url | default: '#' }}" class="wbh-card-btn">Shop Now</a>

          <div class="wbh-price">
            {%- if block.settings.price_text != blank -%}
              {{ block.settings.price_text }}
            {%- elsif block.settings.product != blank -%}
              Starting at {{ block.settings.product.price | money }}
            {%- else -%}
              Starting at $49.99 per month
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Whole Body Health",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#2D4635"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "card_background",
      "label": "Card Background",
      "default": "#93B396"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Whole body health starts in the gut."
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Formulations that provide fast-acting and sustained support using scientifically and clinically studied ingredients."
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Shop All"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "limit": 4,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "badge_text",
          "label": "Badge Text",
          "default": "Bestseller"
        },
        {
          "type": "text",
          "id": "title_override",
          "label": "Custom Product Title",
          "info": "Leave blank to use the product's default title."
        },
        {
          "type": "image_picker",
          "id": "custom_image",
          "label": "Custom Product Image"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background Illustration",
          "info": "Upload an image of ingredients or patterns to hover behind the product."
        },
        {
          "type": "text",
          "id": "price_text",
          "label": "Price Text",
          "info": "e.g. Starting at $39.99 per month"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Whole Body Health",
      "blocks": [
        {
          "type": "product_card",
          "settings": {
            "badge_text": "Bestseller",
            "title_override": "Apple Cider Vinegar"
          }
        },
        {
          "type": "product_card",
          "settings": {
            "badge_text": "New",
            "title_override": "Ashwagandha Extract"
          }
        },
        {
          "type": "product_card",
          "settings": {
            "badge_text": "New",
            "title_override": "Berberine"
          }
        },
        {
          "type": "product_card",
          "settings": {
            "badge_text": "New",
            "title_override": "Black Elderberry"
          }
        }
      ]
    }
  ]
}
{% endschema %}
